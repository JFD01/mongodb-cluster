# where to write logging data.
systemLog:
  destination: file
  logAppend: true
  path: /var/log/mongodb/mongod.log

# network interfaces
net:
  port: 27017
  bindIp: 127.0.0.1, {{ ansible_host }}
# {% for server in groups['mongo'] %}, {{ hostvars[server].ansible_host }}{% endfor %}


# how the process runs
processManagement:
  timeZoneInfo: /usr/share/zoneinfo

